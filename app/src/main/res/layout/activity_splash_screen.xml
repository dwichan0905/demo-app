<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SplashScreenActivity"
    tools:ignore="ExtraText">

    <ImageView
        android:id="@+id/logo_gempa"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logosplashscreen"
        android:contentDescription="@string/text_app_logo" />

    <TextView
        android:id="@+id/text"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/cambo"
        android:text="@string/text_sumber_dari"
        android:layout_below="@id/logo_gempa"
        android:layout_centerInParent="true"
        />

    <ImageView
        android:id="@+id/bmkg"
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:src="@drawable/bmkg"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/text"
        android:contentDescription="@string/text_bmkg_logo" />
    />
</RelativeLayout>